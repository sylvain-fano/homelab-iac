# Proxmox connection
proxmox_endpoint = "https://192.168.1.2:8006"
proxmox_insecure = true

# Pi-hole configuration
pihole_vmid        = 112
pihole_target_node = "proxmox-node-2"
pihole_hostname    = "pihole"
pihole_memory_mb   = 1024
pihole_swap_mb     = 512
pihole_cpu_cores   = 2
pihole_disk_gb     = 5
pihole_ip          = "192.168.1.253"
pihole_gateway     = "192.168.1.1"

# Storage
lxc_storage = "local-lvm"

# Network
network_bridge = "vmbr0"
search_domain  = "homelab.local"
